<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/report_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile">
    </de.hdodenhof.circleimageview.CircleImageView>

    <LinearLayout
        android:layout_toEndOf="@id/report_profile_image"
        android:layout_toStartOf="@+id/report_post_thumbnail"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/username_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/colorBlack">
        </TextView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/content_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/colorBlack">
            </TextView>

            <TextView
                android:id="@+id/time_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/colorMocaRed">
            </TextView>


        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/report_post_thumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true">
    </ImageView>
</RelativeLayout>